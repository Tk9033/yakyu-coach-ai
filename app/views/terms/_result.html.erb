<% if @result.present? %>
  <div class="card bg-base-200 mt-10 shadow max-w-4xl mx-auto p-10">

    <!-- 検索用語 -->
    <h2 class="text-2xl font-bold mb-6">
      <%= @result.term %>
    </h2>

    <!-- 解説文 -->
    <div class="prose prose-lg max-w-none">
      <%= markdown(@result.description) %>
    </div>

    <!-- 関連用語 -->
    <% if @result.related_terms.present? %>
      <div class="mt-10">
        <h3 class="text-sm font-semibold text-base-content/70 mb-3">
          関連用語
        </h3>

        <div class="flex flex-wrap gap-3">
          <% @result.related_terms.each do |term| %>
            <button
              type="button"
              data-related-term="<%= term %>"
              class="
                js-related-term
                px-4 py-2
                rounded-full
                bg-base-100
                text-sm
                hover:bg-base-300
                transition
              ">
              <%= term %>
            </button>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>