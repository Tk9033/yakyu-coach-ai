<% if @result.present? %>
  <div class="card bg-base-200 mt-10 shadow">
    <p>検索結果がここに表示されました（デバッグ）</p>
    <%= @result.inspect %>
    <div class="card-body">
      <h2 class="card-title text-lg font-bold">
        <%= @result[:title] %>
      </h2>

      <p class="leading-relaxed text-base">
        <%= @result[:description] %>
      </p>

      <% if @result[:supplement].present? %>
        <div class="mt-4 text-sm text-gray-500">
          <%= @result[:supplement] %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>