<!-- ロゴ -->
<header class="text-center py-6">
  <h1 class="text-3xl font-bold">yakyu-coach-ai</h1>
</header>

<!-- アプリの説明 -->
<section class="bg-gray-100 py-10 text-center px-4">
  <h2 class="text-2xl font-bold mb-4"><%= t("home.hero.title") %></h2>
  <p class="text-gray-600 mb-6"><%= t("home.hero.subtitle") %></p>

  <%= link_to t("home.hero.cta"), new_level_path , class: "bg-blue-600 text-white px-6 py-3 rounded-lg shadow hover:bg-blue-700" %>
</section>

<!-- 主な機能 -->
<section class="py-10 px-4">
  <h2 class="text-2xl font-bold text-center mb-8"><%= t("home.features.title") %></h2>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <!-- カード1 -->
    <div class="bg-gray-100 p-6 rounded-lg shadow text-center">
      <h3 class="font-bold mb-2"><%= t("home.features.search.title") %></h3>
      <p class="text-gray-600"><%= t("home.features.search.description") %></p>
    </div>

    <!-- カード2 -->
    <div class="bg-gray-100 p-6 rounded-lg shadow text-center">
      <h3 class="font-bold mb-2"><%= t("home.features.level.title") %></h3>
      <p class="text-gray-600"><%= t("home.features.level.description") %></p>
    </div>

    <!-- カード3 -->
    <div class="bg-gray-100 p-6 rounded-lg shadow text-center">
      <h3 class="font-bold mb-2"><%= t("home.features.related.title") %></h3>
      <p class="text-gray-600"><%= t("home.features.related.description") %></p>
    </div>
  </div>
</section>

<!-- 使い方 -->
<section class="bg-gray-100 py-10 px-4">
  <h2 class="text-2xl font-bold text-center mb-8"><%= t("home.how_to.title") %></h2>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="text-center">
      <h3 class="font-bold mb-2"><%= t("home.how_to.step1.title") %></h3>
      <p class="text-gray-600"><%= t("home.how_to.step1.description") %></p>
    </div>
    <div class="text-center">
      <h3 class="font-bold mb-2"><%= t("home.how_to.step2.title") %></h3>
      <p class="text-gray-600"><%= t("home.how_to.step2.description") %></p>
    </div>
    <div class="text-center">
      <h3 class="font-bold mb-2"><%= t("home.how_to.step3.title") %></h3>
      <p class="text-gray-600"><%= t("home.how_to.step3.description") %></p>
    </div>
  </div>

  <div class="text-center mt-8">
    <%= link_to t("home.how_to.cta"), new_level_path , class: "bg-blue-600 text-white px-6 py-3 rounded-lg shadow hover:bg-blue-700" %>
  </div>
</section>
