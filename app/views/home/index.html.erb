<% content_for :title, t("home.ogp.title") %>
<% content_for :description, t("home.ogp.description") %>

<% content_for :og_title, t("home.ogp.title") %>
<% content_for :og_description, t("home.ogp.description") %>
<!-- ロゴ -->
<header class="text-center py-6">
  <div class="inline-block">
    <h1 class="text-4xl font-extrabold text-blue-900">
      yakyu-coach-ai
    </h1>
    <div class="h-1 bg-card-gradient rounded-full mt-2"></div>
  </div>
</header>

<!-- アプリの説明 -->
<section class="py-10 px-4">
  <div class="bg-card-gradient text-white rounded-xl shadow-lg p-8 text-center max-w-4xl mx-auto">

    <h2 class="text-2xl font-bold mb-4">
      <%= t("home.hero.title") %>
    </h2>

    <p class="text-white/90 mb-8">
      <%= t("home.hero.subtitle") %>
    </p>

    <!-- ボタン -->
    <div class="flex flex-col md:flex-row gap-3 justify-center items-center">

      <!-- Googleログイン -->
      <%= link_to user_google_oauth2_omniauth_authorize_path,
        data: { turbo: false },
        class: "order-2 md:order-1 bg-white text-blue-700 font-semibold px-5 py-2.5 rounded-lg shadow hover:bg-gray-100" do %>
        Googleでログイン
      <% end %>

      <!-- 使ってみる -->
      <%= link_to t("home.hero.cta"),
        new_level_path,
        class: "order-1 md:order-2 bg-white text-blue-700 font-semibold px-5 py-2.5 rounded-lg shadow hover:bg-gray-100"
      %>

    </div>

  </div>
</section>

<!-- 主な機能 -->
<section class="py-10 px-4">
  <h2 class="text-2xl font-bold text-blue-900 text-center mb-8">
    <span class="inline-block">
      <%= t("home.features.title") %>
      <span class="block h-1 bg-card-gradient rounded-full mt-2"></span>
    </span>
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-5xl mx-auto">
    <div class="bg-card-gradient text-white p-6 rounded-lg shadow text-center">
      <h3 class="font-bold mb-2">
        <%= t("home.features.search.title") %>
      </h3>
      <p class="text-white/90">
        <%= t("home.features.search.description") %>
      </p>
    </div>

    <div class="bg-card-gradient text-white p-6 rounded-lg shadow text-center">
      <h3 class="font-bold mb-2">
        <%= t("home.features.level.title") %>
      </h3>
      <p class="text-white/90">
        <%= t("home.features.level.description") %>
      </p>
    </div>

    <div class="bg-card-gradient text-white p-6 rounded-lg shadow text-center">
      <h3 class="font-bold mb-2">
        <%= t("home.features.related.title") %>
      </h3>
      <p class="text-white/90">
        <%= t("home.features.related.description") %>
      </p>
    </div>
  </div>
</section>

<!-- 使い方 -->
<section class="py-12 px-4">

  <h2 class="text-2xl font-bold text-blue-900 text-center mb-2">
    <%= t("home.how_to.title") %>
  </h2>
  <div class="w-24 h-1 mx-auto bg-card-gradient rounded-full mb-8"></div>

  <!-- 説明 -->
  <div class="bg-card-gradient text-white rounded-xl shadow-lg p-8 max-w-5xl mx-auto">

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="text-center">
        <h3 class="font-bold mb-2">
          <%= t("home.how_to.step1.title") %>
        </h3>
        <p class="text-white/90">
          <%= t("home.how_to.step1.description") %>
        </p>
      </div>

      <div class="text-center">
        <h3 class="font-bold mb-2">
          <%= t("home.how_to.step2.title") %>
        </h3>
        <p class="text-white/90">
          <%= t("home.how_to.step2.description") %>
        </p>
      </div>

      <div class="text-center">
        <h3 class="font-bold mb-2">
          <%= t("home.how_to.step3.title") %>
        </h3>
        <p class="text-white/90">
          <%= t("home.how_to.step3.description") %>
        </p>
      </div>
    </div>

  <div class="flex flex-col md:flex-row justify-center items-center gap-4 mt-8">

    <!-- Googleログイン -->
      <%= link_to user_google_oauth2_omniauth_authorize_path,
        data: { turbo: false },
        class: "order-2 md:order-1 bg-white text-blue-700 font-semibold px-5 py-2.5 rounded-lg shadow hover:bg-gray-100" do %>
        Googleでログイン
      <% end %>

      <!-- 使ってみる -->
      <%= link_to t("home.hero.cta"),
        new_level_path,
        class: "order-1 md:order-2 bg-white text-blue-700 font-semibold px-5 py-2.5 rounded-lg shadow hover:bg-gray-100"
      %>

  </div>
</section>