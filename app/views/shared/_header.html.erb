<header class="bg-blue-100 shadow">
  <div class="container mx-auto px-4 h-16 flex items-center justify-between">

    <!-- 左：ロゴ -->
    <%= link_to "Yakyu Coach AI", root_path,
        class: "font-bold text-xl text-gray-800" %>

    <!-- 右：ログイン系 -->
    <div class="flex items-center gap-4">
      <%= link_to "使い方", how_to_use_path %>

      <% if user_signed_in? %>
        <!-- ログイン済み -->
        <span class="text-sm text-gray-700">
          <%= current_user.email %>
        </span>

        <%= button_to "ログアウト",
            destroy_user_session_path,
            method: :delete,
            data: { turbo: false },
            class: "px-4 py-2 rounded border border-gray-400 text-gray-700" %>

      <% else %>
        <!-- 未ログイン -->
        <%= link_to user_google_oauth2_omniauth_authorize_path,
            class: "px-4 py-2 rounded border flex items-center gap-2",
            data: { turbo: false } do %>
          <img src="/google-icon.svg" class="w-4 h-4">
          Googleでログイン
        <% end %>
      <% end %>

    </div>
  </div>
</header>