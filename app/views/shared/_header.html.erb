<header class="bg-blue-100 shadow">
  <div class="container mx-auto px-4 relative">
    <div class="flex items-center justify-between h-16">

      <!-- 左：ロゴ -->
      <div class="flex items-center gap-2">
        <%= link_to "Yakyu Coach AI", root_path,
            class: "font-bold text-xl text-gray-800" %>
      </div>

      <!-- 右：メニュー -->
      <nav class="hidden md:flex gap-8 text-gray-700 font-medium">
        <%= link_to t("header.nav.level"), edit_level_path %>
        <%= link_to t("header.nav.home"), root_path %>
        <%= link_to t("header.nav.how_to"), "#" %>
      </nav>

    </div>

    <!--  中央：理解度表示（absoluteで完全中央） -->
    <% if session[:level].present? %>
      <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2
                  text-lg font-semibold text-gray-800">
      <%= t("header.level_label") %>：<%= Ai::LevelDefinition.label(session[:level]) %>
      </div>
    <% end %>

  </div>
</header>